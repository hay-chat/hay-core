              },
              "comment": {
                "type": "string",
                "description": "New comment to add"
              },
              "priority": {
                "type": "string",
                "enum": ["urgent", "high", "normal", "low"],
                "description": "Updated ticket priority"
              },
              "status": {
                "type": "string",
