{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Hay Plugin Manifest",
  "description": "Schema for Hay plugin manifest files",
  "type": "object",
  "required": [
    "id",
    "name",
    "version",
    "description",
    "author",
    "type",
    "entry"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique identifier for the plugin (alphanumeric and hyphens only)"
    },
    "name": {
      "type": "string",
      "description": "Display name of the plugin"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+(-[a-zA-Z0-9-]+(\\.[a-zA-Z0-9-]+)*)?$",
      "description": "Semantic version of the plugin"
    },
    "description": {
      "type": "string",
      "description": "Brief description of what the plugin does"
    },
    "author": {
      "type": "string",
      "description": "Author or organization name"
    },
    "type": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "channel",
          "mcp-connector",
          "retriever",
          "playbook",
          "workflow",
          "analytics"
        ]
      },
      "description": "Plugin type(s) for categorization and functionality"
    },
    "entry": {
      "type": "string",
      "description": "Path to the compiled plugin entry point (e.g., './dist/index.js')"
    },
    "enabled": {
      "type": "boolean",
      "default": true,
      "description": "Whether the plugin is enabled by default"
    },
    "category": {
      "type": "string",
      "enum": ["integration", "chat", "analytics", "automation", "utility"],
      "description": "Plugin category for marketplace organization"
    },
    "icon": {
      "type": "string",
      "description": "Icon identifier or URL for the plugin"
    },
    "marketplace": {
      "type": "object",
      "properties": {
        "featured": {
          "type": "boolean",
          "default": false
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "screenshots": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "capabilities": {
      "type": "object",
      "properties": {
        "chat": {
          "type": "boolean",
          "description": "Whether the plugin provides chat capabilities"
        },
        "mcp": {
          "type": "object",
          "description": "MCP server configuration",
          "properties": {
            "connection": {
              "type": "object",
              "description": "MCP connection configuration",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["local", "remote"],
                  "description": "Connection type: local (stdio) or remote (HTTP/HTTPS)"
                },
                "url": {
                  "type": "string",
                  "description": "Remote MCP server URL (required when type is 'remote')"
                }
              }
            },
            "serverPath": {
              "type": "string",
              "description": "Path to the MCP server entry point"
            },
            "tools": {
              "type": "array",
              "description": "MCP tools provided by this plugin",
              "items": {
                "type": "object",
                "required": ["name", "input_schema"],
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Tool name (function identifier)"
                  },
                  "label": {
                    "type": "string",
                    "description": "Human-readable label for the tool"
                  },
                  "description": {
                    "type": "string",
                    "description": "Description of what the tool does"
                  },
                  "input_schema": {
                    "oneOf": [{ "type": "string" }, { "type": "object" }],
                    "description": "JSON Schema for tool input parameters"
                  }
                }
              }
            },
            "transport": {
              "type": "string",
              "description": "Transport protocol for MCP (e.g., 'sse|websocket|http')"
            },
            "auth": {
              "oneOf": [
                {
                  "type": "array",
                  "description": "Simple authentication methods list",
                  "items": {
                    "type": "string",
                    "enum": ["oauth2", "jwt", "apiKey"]
                  }
                },
                {
                  "type": "object",
                  "description": "Advanced authentication configuration with OAuth support",
                  "properties": {
                    "methods": {
                      "type": "array",
                      "description": "Authentication methods supported",
                      "items": {
                        "type": "string",
                        "enum": ["oauth2", "jwt", "apiKey"]
                      }
                    },
                    "oauth": {
                      "type": "object",
                      "description": "OAuth 2.0 configuration",
                      "required": ["authorizationUrl", "tokenUrl"],
                      "properties": {
                        "authorizationUrl": {
                          "type": "string",
                          "description": "OAuth authorization endpoint URL"
                        },
                        "tokenUrl": {
                          "type": "string",
                          "description": "OAuth token endpoint URL"
                        },
                        "scopes": {
                          "type": "array",
                          "description": "Required OAuth scopes to request",
                          "items": {
                            "type": "string"
                          }
                        },
                        "optionalScopes": {
                          "type": "array",
                          "description": "Optional OAuth scopes to request (sent as separate 'optional_scope' parameter)",
                          "items": {
                            "type": "string"
                          }
                        },
                        "pkce": {
                          "type": "boolean",
                          "description": "Enable PKCE (Proof Key for Code Exchange) for enhanced security",
                          "default": false
                        },
                        "clientIdEnvVar": {
                          "type": "string",
                          "description": "Environment variable name for OAuth client ID"
                        },
                        "clientSecretEnvVar": {
                          "type": "string",
                          "description": "Environment variable name for OAuth client secret (optional for CIMD)"
                        }
                      }
                    }
                  }
                }
              ]
            },
            "installCommand": {
              "type": "string",
              "description": "Command to install dependencies"
            },
            "buildCommand": {
              "type": "string",
              "description": "Command to build the plugin"
            },
            "startCommand": {
              "type": "string",
              "description": "Command to start the MCP server"
            }
          }
        },
        "ui": {
          "type": "object",
          "description": "UI extension capabilities",
          "properties": {
            "routes": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["path", "component"],
                "properties": {
                  "path": {
                    "type": "string"
                  },
                  "component": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "meta": {
                    "type": "object",
                    "properties": {
                      "title": {
                        "type": "string"
                      },
                      "requiresAuth": {
                        "type": "boolean"
                      }
                    }
                  }
                }
              }
            },
            "components": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["name", "path"],
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "path": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "api": {
          "type": "object",
          "description": "API route extensions",
          "properties": {
            "routes": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["method", "path", "handler"],
                "properties": {
                  "method": {
                    "type": "string",
                    "enum": ["GET", "POST", "PUT", "DELETE", "PATCH"]
                  },
                  "path": {
                    "type": "string"
                  },
                  "handler": {
                    "type": "string"
                  },
                  "middleware": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "dependencies": {
      "type": "object",
      "description": "NPM dependencies required by the plugin",
      "additionalProperties": {
        "type": "string"
      }
    },
    "config": {
      "type": "object",
      "description": "Plugin configuration schema",
      "properties": {
        "schema": {
          "type": "object",
          "description": "JSON Schema for plugin configuration"
        },
        "defaults": {
          "type": "object",
          "description": "Default configuration values"
        }
      }
    },
    "permissions": {
      "type": "object",
      "description": "Required permissions for the plugin",
      "properties": {
        "env": {
          "type": "array",
          "description": "Environment variables required by the plugin",
          "items": {
            "type": "string"
          }
        },
        "scopes": {
          "type": "array",
          "description": "API scopes required by the plugin",
          "items": {
            "type": "string"
          }
        },
        "api": {
          "type": "array",
          "description": "Platform API capabilities this plugin requires access to (Plugin API pattern). Plugins can only access APIs they explicitly declare.",
          "items": {
            "type": "string",
            "enum": [
              "email"
            ]
          },
          "uniqueItems": true
        }
      }
    },
    "configSchema": {
      "type": "object",
      "description": "Configuration schema for the plugin",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "description": "Data type of the configuration field"
          },
          "description": {
            "type": "string",
            "description": "Description of the configuration field"
          },
          "label": {
            "type": "string",
            "description": "Display label for the configuration field"
          },
          "placeholder": {
            "type": "string",
            "description": "Placeholder text for input fields"
          },
          "required": {
            "type": "boolean",
            "description": "Whether this field is required"
          },
          "default": {
            "description": "Default value for the field"
          },
          "options": {
            "type": "array",
            "description": "Options for select fields",
            "items": {
              "type": "object",
              "properties": {
                "label": {
                  "type": "string"
                },
                "value": {}
              }
            }
          },
          "regex": {
            "type": "string",
            "description": "Regular expression for validation"
          },
          "env": {
            "type": "string",
            "description": "Environment variable name to map this config to"
          },
          "encrypted": {
            "type": "boolean",
            "description": "Whether this field contains sensitive data that should be encrypted"
          }
        }
      }
    },
    "ui": {
      "type": "object",
      "description": "UI configuration for the plugin",
      "properties": {
        "auth": {
          "type": "string",
          "description": "Authentication type for UI"
        },
        "settings": {
          "type": "boolean",
          "description": "Whether the plugin has a settings UI"
        },
        "configuration": {
          "type": "string",
          "description": "Configuration UI component path"
        },
        "templates": {
          "type": "object",
          "description": "UI templates provided by the plugin",
          "additionalProperties": {
            "type": "string"
          }
        }
      }
    },
    "settingsExtensions": {
      "type": "array",
      "description": "Plugin settings page UI extensions",
      "items": {
        "type": "object",
        "required": ["slot", "component"],
        "properties": {
          "slot": {
            "type": "string",
            "enum": ["before-settings", "after-settings", "tab"],
            "description": "Slot location for the extension. 'tab' creates a new tab in the plugin settings"
          },
          "component": {
            "type": "string",
            "description": "Path to the Vue component file relative to plugin directory"
          },
          "template": {
            "type": "string",
            "description": "Inline HTML template (for backward compatibility)"
          },
          "tabName": {
            "type": "string",
            "description": "Display name for the tab (required when slot is 'tab')"
          },
          "tabOrder": {
            "type": "number",
            "description": "Order of the tab (optional, defaults to order in array)"
          }
        }
      }
    }
  }
}
