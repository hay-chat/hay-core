{
  "$schema": "../base/plugin-manifest.schema.json",
  "id": "hay-plugin-hubspot",
  "name": "HubSpot",
  "description": "Connect your HubSpot CRM to access and manage contacts, companies, deals, tickets, and other CRM objects",
  "version": "1.0.0",
  "author": "Hay",
  "type": ["mcp-connector"],
  "entry": "./dist/index.js",
  "enabled": true,
  "category": "integration",
  "icon": "building",
  "marketplace": {
    "featured": true,
    "tags": ["crm", "hubspot", "contacts", "sales", "marketing", "deals", "tickets", "companies"]
  },
  "capabilities": {
    "mcp": {
      "connection": {
        "type": "remote",
        "url": "https://mcp.hubspot.com"
      },
      "auth": {
        "methods": ["oauth2"],
        "oauth": {
          "authorizationUrl": "https://mcp.hubspot.com/oauth/authorize/user",
          "tokenUrl": "https://mcp.hubspot.com/oauth/v3/token",
          "scopes": [
            "crm.objects.tickets.read",
            "crm.objects.deals.read",
            "crm.objects.companies.read",
            "crm.objects.contacts.read",
            "oauth"
          ],
          "optionalScopes": [
            "crm.objects.tickets.write",
            "crm.objects.owners.read",
            "crm.lists.read",
            "crm.objects.products.write",
            "crm.objects.subscriptions.read",
            "crm.objects.emails.write",
            "crm.objects.orders.read",
            "crm.objects.meetings.write",
            "crm.objects.invoices.read",
            "crm.objects.companies.write",
            "crm.objects.tasks.read",
            "crm.objects.notes.write",
            "crm.objects.deals.write",
            "crm.objects.calls.write",
            "crm.objects.line_items.write",
            "crm.objects.contacts.write",
            "crm.objects.line_items.read",
            "crm.objects.calls.read",
            "crm.objects.meetings.read",
            "crm.objects.users.read",
            "crm.objects.carts.read",
            "crm.objects.emails.read",
            "crm.objects.quotes.read",
            "crm.objects.notes.read",
            "crm.objects.products.read",
            "crm.objects.tasks.write"
          ],
          "pkce": true,
          "clientIdEnvVar": "HUBSPOT_CLIENT_ID",
          "clientSecretEnvVar": "HUBSPOT_CLIENT_SECRET"
        }
      },
      "tools": [
        {
          "name": "hubspot_create_contact",
          "label": "Create Contact",
          "description": "Create a new contact in HubSpot CRM with duplicate detection",
          "input_schema": {
            "type": "object",
            "properties": {
              "firstname": {
                "type": "string",
                "description": "Contact's first name"
              },
              "lastname": {
                "type": "string",
                "description": "Contact's last name"
              },
              "email": {
                "type": "string",
                "description": "Contact's email address"
              },
              "properties": {
                "type": "object",
                "description": "Additional contact properties (company, phone, jobtitle, etc.)"
              }
            },
            "required": ["firstname", "lastname"]
          }
        },
        {
          "name": "hubspot_create_company",
          "label": "Create Company",
          "description": "Create a new company in HubSpot CRM with duplicate detection",
          "input_schema": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Company name"
              },
              "properties": {
                "type": "object",
                "description": "Additional company properties (domain, industry, location, etc.)"
              }
            },
            "required": ["name"]
          }
        },
        {
          "name": "hubspot_get_company_activity",
          "label": "Get Company Activity",
          "description": "Retrieve comprehensive engagement history for a specific company including emails, calls, meetings, notes, and tasks",
          "input_schema": {
            "type": "object",
            "properties": {
              "company_id": {
                "type": "string",
                "description": "HubSpot company ID"
              }
            },
            "required": ["company_id"]
          }
        },
        {
          "name": "hubspot_get_recent_engagements",
          "label": "Get Recent Engagements",
          "description": "Fetch recent activities across all CRM records",
          "input_schema": {
            "type": "object",
            "properties": {
              "days": {
                "type": "number",
                "description": "Number of days to look back (default: 7)",
                "default": 7
              },
              "limit": {
                "type": "number",
                "description": "Maximum number of results (default: 50)",
                "default": 50
              }
            }
          }
        },
        {
          "name": "hubspot_get_active_companies",
          "label": "Get Active Companies",
          "description": "List recently modified companies",
          "input_schema": {
            "type": "object",
            "properties": {
              "limit": {
                "type": "number",
                "description": "Number of companies to retrieve (default: 10)",
                "default": 10
              }
            }
          }
        },
        {
          "name": "hubspot_get_active_contacts",
          "label": "Get Active Contacts",
          "description": "List recently modified contacts",
          "input_schema": {
            "type": "object",
            "properties": {
              "limit": {
                "type": "number",
                "description": "Number of contacts to retrieve (default: 10)",
                "default": 10
              }
            }
          }
        },
        {
          "name": "hubspot_update_contact",
          "label": "Update Contact",
          "description": "Modify existing contact information",
          "input_schema": {
            "type": "object",
            "properties": {
              "contact_id": {
                "type": "string",
                "description": "HubSpot contact ID"
              },
              "properties": {
                "type": "object",
                "description": "Contact properties to update"
              }
            },
            "required": ["contact_id", "properties"]
          }
        },
        {
          "name": "hubspot_update_company",
          "label": "Update Company",
          "description": "Modify existing company information",
          "input_schema": {
            "type": "object",
            "properties": {
              "company_id": {
                "type": "string",
                "description": "HubSpot company ID"
              },
              "properties": {
                "type": "object",
                "description": "Company properties to update"
              }
            },
            "required": ["company_id", "properties"]
          }
        },
        {
          "name": "hubspot_search_contacts",
          "label": "Search Contacts",
          "description": "Search for contacts using various criteria",
          "input_schema": {
            "type": "object",
            "properties": {
              "query": {
                "type": "string",
                "description": "Search query"
              },
              "limit": {
                "type": "number",
                "description": "Maximum number of results (default: 10)",
                "default": 10
              }
            },
            "required": ["query"]
          }
        },
        {
          "name": "hubspot_search_companies",
          "label": "Search Companies",
          "description": "Search for companies using various criteria",
          "input_schema": {
            "type": "object",
            "properties": {
              "query": {
                "type": "string",
                "description": "Search query"
              },
              "limit": {
                "type": "number",
                "description": "Maximum number of results (default: 10)",
                "default": 10
              }
            },
            "required": ["query"]
          }
        },
        {
          "name": "hubspot_get_deals",
          "label": "Get Deals",
          "description": "Retrieve deals from HubSpot CRM",
          "input_schema": {
            "type": "object",
            "properties": {
              "limit": {
                "type": "number",
                "description": "Number of deals to retrieve (default: 10)",
                "default": 10
              }
            }
          }
        },
        {
          "name": "hubspot_get_tickets",
          "label": "Get Tickets",
          "description": "Retrieve support tickets from HubSpot CRM",
          "input_schema": {
            "type": "object",
            "properties": {
              "limit": {
                "type": "number",
                "description": "Number of tickets to retrieve (default: 10)",
                "default": 10
              }
            }
          }
        },
        {
          "name": "hubspot_get_products",
          "label": "Get Products",
          "description": "Retrieve products from HubSpot CRM",
          "input_schema": {
            "type": "object",
            "properties": {
              "limit": {
                "type": "number",
                "description": "Number of products to retrieve (default: 10)",
                "default": 10
              }
            }
          }
        },
        {
          "name": "hubspot_get_quotes",
          "label": "Get Quotes",
          "description": "Retrieve quotes from HubSpot CRM",
          "input_schema": {
            "type": "object",
            "properties": {
              "limit": {
                "type": "number",
                "description": "Number of quotes to retrieve (default: 10)",
                "default": 10
              }
            }
          }
        },
        {
          "name": "hubspot_get_invoices",
          "label": "Get Invoices",
          "description": "Retrieve invoices from HubSpot CRM",
          "input_schema": {
            "type": "object",
            "properties": {
              "limit": {
                "type": "number",
                "description": "Number of invoices to retrieve (default: 10)",
                "default": 10
              }
            }
          }
        }
      ],
      "transport": "http"
    }
  },
  "permissions": {
    "env": ["HUBSPOT_CLIENT_ID", "HUBSPOT_CLIENT_SECRET"],
    "scopes": ["org:<orgId>:mcp:invoke"]
  },
  "configSchema": {},
  "ui": {
    "auth": "oauth2",
    "settings": true
  },
  "settingsExtensions": [
    {
      "slot": "before-settings",
      "component": "components/OAuthConnection.vue"
    }
  ]
}
