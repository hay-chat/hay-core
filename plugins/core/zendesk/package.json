{
  "name": "@hay/plugin-zendesk",
  "version": "1.2.0",
  "description": "Connect your Zendesk account to manage tickets, customers, and support workflows",
  "author": "Hay",
  "main": "dist/index.js",
  "hay-plugin": {
    "entry": "./dist/index.js",
    "displayName": "Zendesk",
    "category": "integration",
    "capabilities": ["mcp"],
    "env": ["ZENDESK_CLIENT_ID", "ZENDESK_CLIENT_SECRET"]
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc --watch"
  },
  "dependencies": {
    "@hay/plugin-sdk": "file:../../../packages/plugin-sdk"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "@types/node": "^20.10.0"
  }
}
