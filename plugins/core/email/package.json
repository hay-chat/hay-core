{
  "name": "@hay/email-plugin",
  "version": "1.0.0",
  "description": "Send emails using the platform email service with configurable recipient lists",
  "author": "Hay",
  "license": "MIT",
  "main": "dist/index.js",
  "hay-plugin": {
    "entry": "./dist/index.js",
    "displayName": "Email",
    "category": "utility",
    "capabilities": ["mcp"],
    "env": []
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc && node dist/index.js",
    "inspect-mcp": "npx -y @modelcontextprotocol/inspector node mcp/index.js"
  },
  "keywords": [
    "mcp",
    "email",
    "smtp",
    "hay",
    "plugin",
    "notifications"
  ],
  "dependencies": {
    "@hay/plugin-sdk": "file:../../../packages/plugin-sdk",
    "@modelcontextprotocol/sdk": "^1.0.4",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}
