# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0
WS_PORT=3002

# Database Configuration
DB_HOST=your-production-db-host
DB_PORT=5432
DB_USERNAME=your-production-db-user
DB_PASSWORD=your-production-db-password
DB_NAME=your-production-db-name
DB_SSL=true
DB_LOGGING=false
DB_MAX_CONNECTIONS=25
DB_CONNECTION_TIMEOUT=60000

# JWT Configuration
JWT_SECRET=your-production-secret-key-change-this
JWT_EXPIRES_IN=60m
JWT_REFRESH_SECRET=your-production-refresh-secret-change-this
JWT_REFRESH_EXPIRES_IN=7d

# OpenAI Configuration
OPENAI_API_KEY=your-production-openai-api-key
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_CHAT_MODEL=gpt-4o

# Embedding Configuration
EMBEDDING_DIM=1536

# Organization Configuration
ORGANIZATION_EXTRACTION_METHOD=subdomain,header,jwt
DEFAULT_ORGANIZATION=default

# Domain Configuration
BASE_DOMAIN=hay.chat
APP_PROTOCOL=https

# CORS Configuration
# Include all subdomains that need access to the API
CORS_ORIGIN=https://hay.chat,https://app.hay.chat,https://api.hay.chat,https://ws.hay.chat

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Conversation options
CONVERSATION_COOLDOWN_INTERVAL=10000 # 10s
CONVERSATION_INACTIVITY_INTERVAL=1800000 # 30min