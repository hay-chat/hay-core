{
  "name": "hay-v3",
  "version": "1.0.0",
  "private": true,
  "description": "Hay platform - Unified monorepo for dashboard, server, and plugins",
  "author": "Hay Labs",
  "license": "MIT",
  "workspaces": [
    "dashboard",
    "server",
    "plugins/webchat",
    "plugins/zendesk/zendesk-mcp-server"
  ],
  "scripts": {
    "dev": "npm run dev:server & npm run dev:dashboard",
    "dev:dashboard": "cd dashboard && npm run dev",
    "dev:server": "cd server && npm run dev",
    "dev:clean": "npm run clean && npm run dev",
    "build": "npm run build:dashboard && npm run build:server",
    "build:dashboard": "cd dashboard && npm run build",
    "build:server": "cd server && npm run build",
    "build:plugins": "cd plugins/webchat && npm run build",
    "build:unified": "UNIFIED_MODE=true NODE_ENV=production cd dashboard && npm run build",
    "build:unified:full": "./build.sh",
    "preview": "cd dashboard && npm run preview",
    "start": "cd server && npm start",
    "start:unified": "UNIFIED_MODE=true NODE_ENV=production cd server && node dist/main.js",
    "dev:unified": "npm run build:unified && npm run start:unified",
    "test": "npm run test:dashboard && npm run test:server",
    "test:dashboard": "cd dashboard && npm test",
    "test:server": "cd server && npm test",
    "lint": "npm run lint:dashboard",
    "lint:dashboard": "cd dashboard && npm run lint",
    "lint:fix": "npm run lint:fix:dashboard",
    "lint:fix:dashboard": "cd dashboard && npm run lint:fix",
    "typecheck": "npm run typecheck:dashboard && npm run typecheck:server",
    "typecheck:dashboard": "cd dashboard && npm run typecheck",
    "typecheck:server": "cd server && npm run typecheck",
    "clean": "npm run clean:dashboard && npm run clean:server",
    "clean:dashboard": "rm -rf dashboard/.nuxt dashboard/dist dashboard/.output",
    "clean:server": "rm -rf server/dist",
    "clean:all": "npm run clean && rm -rf node_modules dashboard/node_modules server/node_modules plugins/*/node_modules",
    "kill-ports": "npm run kill-ports:dashboard & npm run kill-ports:server",
    "kill-ports:dashboard": "fuser -k 5173/tcp 2>/dev/null || lsof -ti tcp:5173 | xargs kill -9 2>/dev/null || true",
    "kill-ports:server": "lsof -ti tcp:3000,4000,5000 | xargs kill -9 2>/dev/null || true",
    "migration:generate": "cd server && npm run migration:generate",
    "migration:run": "cd server && npm run migration:run",
    "migration:revert": "cd server && npm run migration:revert",
    "migration:show": "cd server && npm run migration:show",
    "generate:trpc": "cd dashboard && npm run generate:trpc",
    "postinstall": "cd dashboard && nuxt prepare"
  },
  "dependencies": {
    "@headlessui/vue": "^1.7.16",
    "@heroicons/vue": "^2.0.18",
    "@langchain/community": "^0.3.53",
    "@langchain/core": "^0.3.72",
    "@langchain/langgraph": "^0.4.7",
    "@langchain/openai": "^0.6.9",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@nuxt/ui": "^2.11.1",
    "@nuxtjs/tailwindcss": "^6.8.4",
    "@pinia/nuxt": "^0.11.2",
    "@tanstack/vue-query": "^5.85.5",
    "@trpc/client": "^11.5.0",
    "@trpc/server": "^11.5.0",
    "@vee-validate/zod": "^4.12.4",
    "@vueuse/nuxt": "^10.5.0",
    "argon2": "^0.31.2",
    "axios": "^1.11.0",
    "bcrypt": "^5.1.1",
    "cheerio": "^1.1.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-vue-next": "^0.294.0",
    "nuxt": "^3.8.2",
    "openai": "^4.62.1",
    "pdf-parse": "^1.1.1",
    "pg": "^8.16.3",
    "pgvector": "^0.2.1",
    "pinia": "^3.0.3",
    "pinia-plugin-persistedstate": "^4.5.0",
    "radix-vue": "^1.2.3",
    "reflect-metadata": "^0.2.2",
    "shadcn-nuxt": "^0.10.4",
    "superjson": "^2.2.2",
    "tailwind-merge": "^2.0.0",
    "tailwindcss-animate": "^1.0.7",
    "trpc": "^0.11.3",
    "typeorm": "^0.3.26",
    "uuid": "^9.0.1",
    "vee-validate": "^4.12.4",
    "vue": "^3.3.8",
    "vue-router": "^4.2.5",
    "ws": "^8.14.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@nuxt/devtools": "latest",
    "@types/bcrypt": "^5.0.2",
    "@types/cheerio": "^1.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.0",
    "@types/pdf-parse": "^1.1.5",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-plugin-vue": "^9.18.1",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "unplugin-auto-import": "^20.0.0",
    "unplugin-vue-components": "^29.0.0",
    "vitest": "^0.34.6",
    "vue-tsc": "^3.0.5"
  },
  "overrides": {
    "vite": "^6.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
