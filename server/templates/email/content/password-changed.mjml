<!-- Password Changed Confirmation Content -->
<mj-section background-color="#ffffff" padding="20px 25px">
  <mj-column>
    <mj-text font-size="20px" font-weight="600" color="#333333" padding="0 0 20px 0">
      Password Changed Successfully
    </mj-text>

    <mj-text color="#555555" line-height="24px">
      Hi {{userName}},
    </mj-text>

    <mj-text color="#555555" line-height="24px" padding="10px 0">
      This is to confirm that your password has been successfully changed.
    </mj-text>

    <mj-text color="#5cb85c" font-size="14px" line-height="22px" padding="10px 0">
      ‚úì Your account is now secured with your new password.
    </mj:text>

    <mj-divider border-color="#e0e0e0" border-width="1px" padding="20px 0" />

    <mj-text color="#d9534f" font-size="13px" line-height="20px" padding="0 0 10px 0">
      ‚ö†Ô∏è <strong>Didn't make this change?</strong>
    </mj-text>

    <mj-text color="#555555" font-size="13px" line-height="20px" padding="0 0 15px 0">
      If you didn't authorize this password change, your account may have been compromised. Please contact our support team immediately.
    </mj-text>

    <mj-button background-color="#d9534f" color="#ffffff" font-size="14px" font-weight="600" border-radius="4px" padding="10px 0" href="{{supportUrl}}">
      Contact Support
    </mj-button>
  </mj-column>
</mj-section>

<!-- Security Details -->
<mj-section background-color="#f9f9f9" padding="20px 25px">
  <mj-column>
    <mj-text font-size="14px" font-weight="600" color="#333333" padding="0 0 10px 0">
      Security Details
    </mj-text>
    <mj-text color="#666666" font-size="12px" line-height="18px">
      <strong>Email:</strong> {{userEmail}}<br/>
      <strong>Time:</strong> {{requestTime}}<br/>
      <strong>IP Address:</strong> {{ipAddress}}<br/>
      <strong>Browser:</strong> {{browser}}<br/>
      <strong>Location:</strong> {{location}}
    </mj-text>
  </mj-column>
</mj-section>

<!-- Security Tips -->
<mj-section background-color="#ffffff" padding="20px 25px">
  <mj-column>
    <mj-text font-size="14px" font-weight="600" color="#333333" padding="0 0 10px 0">
      üí° Security Tips
    </mj-text>
    <mj-text color="#666666" font-size="12px" line-height="20px">
      ‚Ä¢ Use a unique password that you don't use anywhere else<br/>
      ‚Ä¢ Make sure your password is at least 8 characters long<br/>
      ‚Ä¢ Use a mix of letters, numbers, and special characters<br/>
      ‚Ä¢ Consider using a password manager
    </mj-text>
  </mj-column>
</mj-section>
