{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "../",
    "noEmit": false,
    "types": ["node"],
    "baseUrl": "../",
    "paths": {
      "@server/*": ["./server/*"],
      "@plugins/*": ["./plugins/*"]
    }
  },
  "include": ["**/*.ts", "../plugins/**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.test.example.ts"]
}
