{
  "name": "@hay/server",
  "version": "1.0.0",
  "private": true,
  "main": "main.ts",
  "scripts": {
    "dev": "nodemon main.ts",
    "dev:clean": "nodemon main.ts",
    "build": "npm run build:base && npm run migration:ensure && tsc",
    "build:base": "cd ../plugins/base && npm run build",
    "start": "node -r module-alias/register dist/main.js",
    "kill-ports": "lsof -ti tcp:3000,4000,5000 | xargs kill -9 2>/dev/null || true",
    "typecheck": "tsc --noEmit",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate -d ./database/data-source.ts",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d ./database/data-source.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d ./database/data-source.ts",
    "migration:show": "typeorm-ts-node-commonjs migration:show -d ./database/data-source.ts",
    "migration:ensure": "./scripts/check-migrations.sh",
    "migration:check": "tsx scripts/ensure-migrations.ts"
  },
  "_moduleAliases": {
    "@server": "dist",
    "@plugins": "../plugins"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.0",
    "@types/pdf-parse": "^1.1.5",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.18.1",
    "tsconfig-paths": "^4.2.0"
  },
  "dependencies": {
    "@stripe/stripe-js": "^7.9.0",
    "@types/ioredis": "^5.0.0",
    "ajv": "^8.17.1",
    "fast-uri": "^3.1.0",
    "ioredis": "^5.7.0",
    "jose": "^6.1.0",
    "mammoth": "^1.11.0",
    "module-alias": "^2.2.3",
    "stripe": "^18.5.0",
    "word-extractor": "^1.0.4"
  }
}
