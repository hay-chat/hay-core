# Cloud Deployment Environment Variables
# Copy this file to .env and fill in your values

# Domain Configuration (REQUIRED)
# Service Domains (for self-hosted deployments)
API_DOMAIN=api.yourdomain.com
DASHBOARD_DOMAIN=yourdomain.com
CDN_DOMAIN=cdn.yourdomain.com
USE_SSL=true

# Database Configuration
# Option 1: Use external/managed database (Recommended for production)
# Uncomment and set these values to use an external database:
# DB_HOST=your-database-host.com
# DB_PORT=5432
# DB_USERNAME=hay
# DB_PASSWORD=your-secure-password
# DB_NAME=hay_db
# DB_SSL=true

# Option 2: Use containerized database (Default for development)
# Leave DB_HOST unset to automatically create a PostgreSQL container
DB_USERNAME=hay
DB_PASSWORD=change-this-secure-password
DB_NAME=hay_db
DB_SSL=false
DB_LOGGING=false
DB_MAX_CONNECTIONS=10
DB_CONNECTION_TIMEOUT=60000

# JWT Configuration (REQUIRED - Generate secure random strings)
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-change-in-production
JWT_REFRESH_EXPIRES_IN=30d

# OpenAI Configuration (REQUIRED)
OPENAI_API_KEY=your-openai-api-key
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_CHAT_MODEL=gpt-4o

# Embedding Configuration
EMBEDDING_DIM=1536

# Organization Configuration
ORGANIZATION_EXTRACTION_METHOD=subdomain,header,jwt
DEFAULT_ORGANIZATION=default

# Domain Configuration
BASE_DOMAIN=hay.local
APP_PROTOCOL=https

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Conversation options
CONVERSATION_COOLDOWN_INTERVAL=10000
CONVERSATION_INACTIVITY_INTERVAL=1800000

# SMTP Email Configuration (Optional)
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_AUTH_USER=your-email@gmail.com
SMTP_AUTH_PASS=your-app-specific-password
SMTP_FROM_EMAIL=noreply@updates.hay.chat
SMTP_FROM_NAME=Hay

# Stripe Configuration (Optional - for Cloud Plugin)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_STARTER_PRICE_ID=price_starter_id
STRIPE_PROFESSIONAL_PRICE_ID=price_professional_id
STRIPE_ENTERPRISE_PRICE_ID=price_enterprise_id

# Node Environment
NODE_ENV=production
