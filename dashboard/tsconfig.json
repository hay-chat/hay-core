{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "skipLibCheck": true,
    "types": ["node"],
    "paths": {
      "@/*": ["./*"],
      "~/*": ["./*"],
      "@server/*": ["../server/*"],
      "@plugins/*": ["../plugins/*"]
    }
  },
  "include": ["./**/*.ts", "./**/*.vue"],
  "skipLibCheck": true,
  "exclude": [
    "node_modules",
    ".nuxt",
    "../server/**/*",
    "../plugins/**/*",
    "../**/*.spec.ts",
    "../**/*.test.ts"
  ]
}
