{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./types"],
    "paths": {
      "@/*": ["./*"],
      "~/*": ["./*"],
      "@server/*": ["../server/*"],
      "@plugins/*": ["../plugins/*"]
    }
  },
  "include": [
    "./**/*.ts",
    "./**/*.vue",
    "./types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    ".nuxt",
    ".output",
    "dist",
    "../server",
    "../plugins",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
