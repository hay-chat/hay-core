  "compilerOptions": {
    "skipLibCheck": true,
    "noEmit": false,
    "types": ["node"]
  },
  "include": [
    "./**/*",
    "../server/routes/v1/index.ts",
    "../server/trpc/app-router-type.ts"
  ],
  "exclude": [
