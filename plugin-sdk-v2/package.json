{
  "name": "@hay/plugin-sdk-v2",
  "version": "0.1.0",
  "description": "Hay Plugin SDK v2 - Self-contained SDK for building Hay plugins",
  "type": "module",
  "main": "./dist/sdk/index.js",
  "types": "./dist/sdk/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/sdk/index.d.ts",
      "import": "./dist/sdk/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js"
    },
    "./runner": {
      "types": "./dist/runner/index.d.ts",
      "import": "./dist/runner/index.js"
    },
    "./sdk/stdio-mcp-client": {
      "types": "./dist/sdk/stdio-mcp-client.d.ts",
      "import": "./dist/sdk/stdio-mcp-client.js"
    }
  },
  "bin": {
    "hay-plugin-runner": "./dist/runner/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "hay",
    "plugin",
    "sdk",
    "mcp",
    "model-context-protocol"
  ],
  "author": "Hay",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^1.1.0",
    "typescript": "^5.3.0",
    "vitest": "^1.1.0"
  },
  "dependencies": {
    "express": "^4.18.2"
  }
}
