{
  "name": "hay-plugin-stripe",
  "version": "0.1.0",
  "description": "Example Stripe plugin for Hay Plugin SDK v2",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "clean": "rm -rf dist"
  },
  "hay-plugin": {
    "entry": "./dist/index.js",
    "displayName": "Stripe",
    "category": "integration",
    "capabilities": [
      "routes",
      "mcp",
      "auth",
      "config",
      "ui"
    ],
    "env": [
      "STRIPE_API_KEY",
      "STRIPE_WEBHOOK_SECRET"
    ]
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "hay-plugin",
    "stripe",
    "example"
  ],
  "license": "MIT"
}
